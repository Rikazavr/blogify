<!-- ======================================================Pop posts============================= -->
    <h2>Popular posts</h2>
      <% @pop.each do |pop| %>
        <div class="popular-posts">
          <%= link_to post_path(pop) do %>
          <%= image_tag(pop.image.url(), class:"small-image")%>
          <% end %>
          <p class="green"><%= l pop.date, :format => :long %></p>
          <p class="gray"><%= pop.title %></p>
        </div>
      <% end %>
<!-- ======================================================Rec comments============================= -->
    <h2>Recent Comments</h2>
      <% @recent_comments.each do |rec| %>
        <div class="recent-comments">
          <%= link_to '#' do %>
          <%= image_tag("dude.jpg", class:"small-image")%>
          <% end %>
          <p class="green"><%= rec.author %></p>
          <% 

            if rec.comment.length > 50
              comment = rec.comment[0..40] + rec.comment[41..60].split(' ')[0] + '...'
            else
              comment = rec.comment
            end

           %>
          <p class="gray"><%= comment %></p>
        </div>
      <% end %>
<!-- ====================================================== tags ============================= -->
    <div class="tags">
      <h2>TAGS </h2>
      <% @tags.each do |tag| %>
        <%= link_to tag.name, by_tag_path(slug:tag.slug), class:"tag" %>
