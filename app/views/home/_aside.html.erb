<aside>
  <div>
    <h2>Categories</h2>
    <% @categories.each do |cat| %>
      <%= link_to by_category_path(slug:cat.slug), class:"categories" do %>
      <%= cat.name %>
      <span class="categoties-number">
          <%= cat.posts.count %>
      </span>
      <% end %>
    <% end %>
  </div>
<!-- ======================================================Dribble============================= -->
