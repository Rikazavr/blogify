<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.cktext_area :text %>
  </div>
  <div class="field">
    <%= f.label :preview %><br>
    <%= f.text_area :preview %>
  </div>
  <div class="field">
    <%= f.label :post_type_id %><br>
    <%= f.select :post_type_id, PostType.all.collect {|p| [ p.name, p.id ] } %>
  </div>
  <div class="field">
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
